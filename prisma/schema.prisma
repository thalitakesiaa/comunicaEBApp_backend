generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int        @id @default(autoincrement()) @map("user_id")
  email      String     @unique
  password   String
  profile    String     @db.VarChar(32)
  employee   employees? @relation("user_employee")
  employee_id Int
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  @@map("users")
}

model employees {
  id             Int        @id @default(autoincrement()) @map("employee_id")
  name           String
  email          String    @unique
  council_registration Int
  working_hours  Int
  affiliation    String     @db.VarChar(16)
  service_station service_stations?   @relation(fields: [service_station_id], references: [id])
  service_station_id       Int
  position_id    Int
  position       positions   @relation(fields: [position_id], references: [id])
  user_id        Int?       @unique
  user           users?      @relation("user_employee", fields: [user_id], references: [id])
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt

  @@map("employees")
}

model positions {
  id              Int                 @id @default(autoincrement()) @map("position_id")
  name            String
  employees       employees[]
  service_station service_stations?   @relation(fields: [service_station_id], references: [id])
  service_station_id Int
  created_at      DateTime            @default(now())
  updated_at      DateTime            @updatedAt

  @@map("positions")
}

model service_stations {
  id          Int         @id @default(autoincrement()) @map("service_station_id")
  name        String
  description String?
  positions   positions[]
  employee employees[]
  work_assignments WorkAssignment[] 
  area_id     Int
  area        areas       @relation(fields: [area_id], references: [id])
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt

  @@map("service_stations")
}

model WorkAssignment {
  id              Int         @id @default(autoincrement()) @map("assignment_id")
  exercise_label  String      @db.VarChar(32)
  service_station_id Int
  service_station    service_stations @relation(fields: [service_station_id], references: [id])
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  @@map("work_assignments")
}

model areas {
  id          Int         @id @default(autoincrement()) @map("area_id")
  name        String
  description String?
  service_stations service_stations[]
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt

  @@map("areas")
}